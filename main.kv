<MDFloatLayout>:
    md_bg_color: 0.73,0.75,0.72,1
<MDBoxLayout>:
    md_bg_color: 0.73,0.75,0.72,1
    orientation: 'vertical'
ScreenManager:
    id: screen_manager
    Screen:
        name: 'opciones_calculadora'
        MDBoxLayout:
            ScrollView:
                MDList:
                    OneLineAvatarListItem:
                        text: 'Area'
                        on_release: app.cambio('areas')
                        IconLeftWidget:
                            icon: 'alpha-a-box'
                    OneLineAvatarListItem:
                        text: 'Volumen'
                        on_release: app.cambio('volumenes')
                        IconLeftWidget:
                            icon: "alpha-v-box"
                    OneLineListItem:
                        text: 'Matrices'
                        on_release: ''
                    OneLineListItem:
                        text: 'Vectores'
                        on_release: ''
    Screen:
        name: 'areas'
        MDBoxLayout:
            MDIconButton:
                icon: 'arrow-left-bold-circle-outline'
                icon_color: 1,0,0,1
                pos_hint: {'left':1,'top': 1}
                on_press: app.regresar('opciones_calculadora')
            ScrollView:
                MDList:
                    OneLineListItem:
                        text: 'Triangulo'
                        on_release: app.cambio('a_triangulo')
                    OneLineListItem:
                        text: 'Romboide'
                        on_release: app.cambio('a_romboide')
                    OneLineListItem:
                        text: 'Trapecio'
                        on_release: app.cambio('a_trapecio')
                    OneLineListItem:
                        text: 'Rombo'
                        on_release: app.cambio('a_rombo')
                    OneLineListItem:
                        text: 'Pol√≠gono Regular'
                        on_release: app.cambio('a_poligono')
                    OneLineListItem:
                        text: 'Circulo'
                        on_release: app.cambio('a_circulo')
                    OneLineListItem:
                        text: 'Sector circular'
                        on_release: app.cambio('a_sectorc')
                    OneLineListItem:
                        text: 'Corona circular'
                        on_release: app.cambio('a_coronaC')
                    OneLineListItem:
                        text: 'Trapecio circular'
                        on_release: app.cambio('a_trapecioC')
    Screen:
        name: 'a_triangulo'
        MDFloatLayout:
            MDIconButton:
                icon: 'arrow-left-bold-circle-outline'
                pos_hint: {'left':1,'top': 1}
                on_press: app.regresar('areas')
            Image:
                source: ".\\assets\\a.jpg"
