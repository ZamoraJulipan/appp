<MDFloatLayout>:
    md_bg_color: 0.73,0.75,0.72,1
<MDBoxLayout>:
    md_bg_color: 0.73,0.75,0.72,1
    orientation: 'vertical'
ScreenManager:
    id: screen_manager
    Screen:
        name: 'log_in_screen'
        MDFloatLayout:
            Image:
                source: "carga.png"
                size_hint: 0.7,0.7
                pos_hint: {'center_x': 0.5,'center_y': 0.75}
            MDTextField:
                id: usuario
                line_color_focus: 0,0,0,1
                hint_text: "Usuario"
                icon_right: "account"
                size_hint_x: 0.28
                pos_hint: {'center_x': 0.5,'center_y': 0.47}
            MDTextField:
                id: contrasena
                hint_text: "Contrase√±a"
                line_color_focus: 0,0,0,1
                password: True
                icon_right: "key"
                size_hint_x: 0.28
                pos_hint: {'center_x': 0.5,'center_y': 0.37}
            MDFlatButton:
                text: 'Ingresar'
                theme_text_color: "Custom" #parece necesario
                text_color: 0.9,0.89,0.24,1
                md_bg_color: 0,0,0,1
                pos_hint: {'center_x': 0.5,'center_y': 0.27}
                on_press: app.presionado(usuario.text,contrasena.text)
    Screen:
        name: "main_opciones"
        MDFloatLayout:
            ScrollView:
                MDList:
                    #usualmente se unsa OneLineListItem o two o three
                    #para usar un icono se pone Avatar entre el Line y ListItem
                    OneLineAvatarListItem:
                        text: 'Bati-Calculadora'
                        on_release: app.cambio('opciones_calculadora')
                        IconLeftWidget:
                            icon: 'calculator'
    Screen:
        name: 'opciones_calculadora'
        MDBoxLayout:
            MDIconButton:
                icon: 'arrow-left-bold-circle-outline'
                icon_color: 1,0,0,1
                pos_hint: {'left':1,'top': 1}
                on_press: app.regresar('main_opciones')
            ScrollView:
                MDList:
                    OneLineAvatarListItem:
                        text: 'Area'
                        on_release: app.cambio('areas')
                        IconLeftWidget:
                            icon: 'alpha-a-box'
                    OneLineListItem:
                        text: 'Volumen'
                        on_release: ''
                    OneLineListItem:
                        text: 'Matrices'
                        on_release: ''
                    OneLineListItem:
                        text: 'Vectores'
                        on_release: ''
    