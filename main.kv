#:kivy 1.1.1

<ui>:
    MDScreen:
        MDBoxLayout:
            orientation: 'horizontal'
            halign_x: 'center'
            pos_hint: {'center_y':.95,'center_x':.7}
            MDTextField:
                id: texto_ingresado
                hint_text: 'meta texto'
                size_hint_x: None
                width: 300
        MDBoxLayout:
            pos_hint: {'center_x':.78,'center_y':.9}
            MDRectangleFlatButton:
                text: 'Guardar'
                on_release:
                    app.guardar(texto_ingresado.text)