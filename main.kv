<MDFloatLayout>:
    md_bg_color: 0.73,0.75,0.72,1
<MDBoxLayout>:
    md_bg_color: 0.73,0.75,0.72,1
    orientation: 'vertical'
ScreenManager:
    id: screen_manager
    Screen:
        name: 'log_in_screen'
        MDFloatLayout:
            Image:
                source: ".\\assets\\carga.png"
                size_hint: 0.7,0.7
                pos_hint: {'center_x': 0.5,'center_y': 0.75}
            MDTextField:
                id: usuario
                line_color_focus: 0,0,0,1
                hint_text: "Usuario"
                icon_right: "account"
                size_hint_x: 0.28
                pos_hint: {'center_x': 0.5,'center_y': 0.47}
            MDTextField:
                id: contrasena
                hint_text: "Contraseña"
                line_color_focus: 0,0,0,1
                password: True
                icon_right: "key"
                size_hint_x: 0.28
                pos_hint: {'center_x': 0.5,'center_y': 0.37}
            MDFlatButton:
                text: 'Ingresar'
                theme_text_color: "Custom" #parece necesario
                text_color: 0.9,0.89,0.24,1
                md_bg_color: 0,0,0,1
                pos_hint: {'center_x': 0.5,'center_y': 0.27}
                on_press: app.presionado(usuario.text,contrasena.text)
    Screen:
        name: "main_opciones"
        MDFloatLayout:
            ScrollView:
                MDList:
                    #usualmente se unsa OneLineListItem o two o three
                    #para usar un icono se pone Avatar entre el Line y ListItem
                    OneLineAvatarListItem:
                        text: 'Bati-Calculadora'
                        on_release: app.cambio('opciones_calculadora')
                        IconLeftWidget:
                            icon: 'calculator'
    Screen:
        name: 'opciones_calculadora'
        MDBoxLayout:
            MDIconButton:
                icon: 'arrow-left-bold-circle-outline'
                icon_color: 1,0,0,1
                pos_hint: {'left':1,'top': 1}
                on_press: app.regresar('main_opciones')
            ScrollView:
                MDList:
                    OneLineAvatarListItem:
                        text: 'Area'
                        on_release: app.cambio('areas')
                        IconLeftWidget:
                            icon: 'alpha-a-box'
                    OneLineListItem:
                        text: 'Volumen'
                        on_release: ''
                    OneLineListItem:
                        text: 'Matrices'
                        on_release: ''
                    OneLineListItem:
                        text: 'Vectores'
                        on_release: ''
    Screen:
        name: 'areas'
        MDBoxLayout:
            MDIconButton:
                icon: 'arrow-left-bold-circle-outline'
                icon_color: 1,0,0,1
                pos_hint: {'left':1,'top': 1}
                on_press: app.regresar('opciones_calculadora')
            ScrollView:
                MDList:
                    OneLineListItem:
                        text: 'Triangulo'
                        on_release: app.cambio('a_triangulo')
                    OneLineListItem:
                        text: 'Romboide'
                        on_release: app.cambio('a_romboide')
                    OneLineListItem:
                        text: 'Trapecio'
                        on_release: app.cambio('a_trapecio')
                    OneLineListItem:
                        text: 'Rombo'
                        on_release: app.cambio('a_rombo')
                    OneLineListItem:
                        text: 'Polígono Regular'
                        on_release: app.cambio('a_poligono')
                    OneLineListItem:
                        text: 'Circulo'
                        on_release: app.cambio('a_circulo')
                    OneLineListItem:
                        text: 'Sector circular'
                        on_release: app.cambio('a_sectorc')
                    OneLineListItem:
                        text: 'Corona circular'
                    OneLineListItem:
                        text: 'Trapecio circular'
    Screen:
        name: 'a_triangulo'
        MDFloatLayout:
            MDIconButton:
                icon: 'arrow-left-bold-circle-outline'
                pos_hint: {'left':1,'top': 1}
                on_press: app.regresar('areas')
            Image:
                source: ".\\assets\\areas\\area_triangulo.jpg"
                size_hint: 0.6, 0.6
                pos_hint: {'center_x': 0.5,'center_y': 0.8}
            MDTextField:
                id: Base
                hint_text: 'Base'
                size_hint_x: 0.3
                helper_text: 'Numero natural o decimal con punto'
                pos_hint: {'center_x': 0.5,'center_y': 0.53}
            MDTextField:
                id: Altura
                hint_text: 'Altura'
                size_hint_x: 0.3
                helper_text: 'Numero natural o decimal con punto'
                pos_hint: {'center_x': 0.5,'center_y': 0.4}
            MDFlatButton:
                text: 'Calcular'
                font_size: '30dp'
                on_press: app.area_triangulo(Base.text,Altura.text)
                pos_hint: {'center_x': 0.5,'center_y': 0.3}
            MDLabel:
                id: rt
                text: ""
                font_size: '30dp'
                color: 1,0,0,1
                halign: 'center'
                pos_hint: {'center_y': 0.2}
