#:kivy 1.1.1

<ui>:
    MDScreen:
        name: 'principal'
        MDBoxLayout:
            pos_hint: {'center_x':1}
            MDLabel:
                text: 'toca'
        MDBoxLayout:
            pos_hint: {'center_x':1,'center_y':1.2}
            MDRectangleFlatButton:
                text: 'grabar'
                on_release:
                    root.current = 'question'
        MDBoxLayout:
            MDRectangleFlatButton:
                text: 'verificar texto'
                on_release:
                    root.current = 'text'
                    app.verify_text()
        MDBoxLayout:
            pos_hint: {'center_y':.6}
            MDRectangleFlatButton:
                text: 'verify'
                on_release:
                    app.verify_bool()
        MDBoxLayout:
            pos_hint: {'center_y':.8}
            MDRectangleFlatButton:
                text: 'archivo normal'
                on_release:
                    app.archivo_normal()
        MDBoxLayout:
            pos_hint: {'center_x':1,'center_y':.8}
            MDRectangleFlatButton:
                text: 'Guardar coordenadas'
                on_release:
                    app.guardar()

    MDScreen:
        name: 'text'
        MDBoxLayout:
            MDLabel:
                id: coordenadas

    MDScreen:
        name: 'question'
        MDBoxLayout:
            halign: 'center'
            pos_hint: {'center_x':.74,'center_y':.8}
            MDLabel:
                text: 'Numero de toques?'
        MDBoxLayout:
            halign: 'center'
            orientation: 'vertical'
            pos_hint: {'center_x':.8,'center_y':.89}
            MDRectangleFlatButton:
                text: '1'
                on_release:
                    root.current = 'principal'
                    app.empezar_toques(1)
            MDRectangleFlatButton:
                text: '2'
                on_release:
                    root.current = 'principal'
                    app.empezar_toques(2)
            MDRectangleFlatButton:
                text: '3'
                on_release:
                    root.current = 'principal'
                    app.empezar_toques(3)
            MDRectangleFlatButton:
                text: '4'
                on_release:
                    root.current = 'principal'
                    app.empezar_toques(4)
            MDRectangleFlatButton:
                text: '5'
                on_release:
                    root.current = 'principal'
                    app.empezar_toques(5)