#:kivy 1.1.1

<ui>:
    MDScreen:
        MDBoxLayout:
            MDRectangleFlatButton:
                text: 'empezar'
                on_release:
                    app.start_recording()
            
            MDRectangleFlatButton:
                text: 'terminar'
                on_release:
                    app.stop_recording()
        MDBoxLayout:
            MDLabel:
                id: label_final
                pos_hint: {'center_x':.5,'center_y':.5}
                text: ''
        MDBoxLayout:
            MDRectangleFlatButton:
                pos_hint: {'center_x':1.2,'center_y':.6}
                text: 'primer toque'
            MDRectangleFlatButton:
                pos_hint: {'center_x':.9,'center_y':.7}
                text: 'segundo toque'