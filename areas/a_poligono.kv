<MDTextField>:
    input_filter: 'float'
Screen:
    name: 'a_poligono'
    MDFloatLayout:
        MDIconButton:
            icon: 'arrow-left-bold-circle-outline'
            pos_hint: {'left':1,'top': 1}
            on_press: app.regresar('areas')
        Image:
            source: ".\\areas\\area_poligono_r.png"
            size_hint: 0.6, 0.6
            pos_hint: {'center_x': 0.5,'center_y': 0.8}
        MDTextField:
            id: Caras
            hint_text: 'N de Caras'
            size_hint_x: 0.3
            helper_text: 'Numero natural o decimal con punto'
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
        MDTextField:
            id: Apotema
            hint_text: 'Apotema'
            size_hint_x: 0.3
            helper_text: 'Numero natural o decimal con punto'
            pos_hint: {'center_x': 0.5,'center_y': 0.27}
        MDTextField:
            id: Lado
            hint_text: 'Lado'
            size_hint_x: 0.3
            helper_text: 'Numero natural o decimal con punto'
            pos_hint: {'center_x': 0.5,'center_y': 0.39}
        MDFlatButton:
            text: 'Calcular'
            font_size: '30dp'
            on_press: app.area_poligono(Caras.text,Lado.text,Apotema.text)
            pos_hint: {'center_x': 0.5,'center_y': 0.17}
        MDLabel:
            id: rt
            text: ""
            font_size: '30dp'
            color: 1,0,0,1
            halign: 'center'
            pos_hint: {'center_y': 0.07}