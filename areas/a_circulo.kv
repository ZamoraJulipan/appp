<MDTextField>:
    input_filter: 'float'
Screen:
    name: 'a_circulo'
    MDFloatLayout:
        MDIconButton:
            icon: 'arrow-left-bold-circle-outline'
            pos_hint: {'left':1,'top': 1}
            on_press: app.regresar('areas')
        Image:
            source: ".\\areas\\area_circulo.jpeg"
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': 0.5,'center_y': 0.8}
        MDTextField:
            id: Radio
            hint_text: 'Radio'
            size_hint_x: 0.3
            helper_text: 'Numero natural o decimal con punto'
            pos_hint: {'center_x': 0.5,'center_y': 0.48}
        MDFlatButton:
            text: 'Calcular'
            font_size: '30dp'
            on_press: app.area_circulo(Radio.text)
            pos_hint: {'center_x': 0.5,'center_y': 0.3}
        MDLabel:
            id: rt
            text: ""
            font_size: '30dp'
            color: 1,0,0,1
            halign: 'center'
            pos_hint: {'center_y': 0.2}